# OWASP ZAP connection
ZAP_API_URL=http://127.0.0.1:8080
ZAP_API_KEY=

# Target configuration
DEFAULT_TARGET_URL=https://example.com

# Authentication (optional)
# Leave LOGIN_URL blank to run anonymously.
LOGIN_URL=
LOGIN_USERNAME=
LOGIN_PASSWORD=

# Form field names (defaults shown)
LOGIN_USERNAME_FIELD=username
LOGIN_PASSWORD_FIELD=password

# Extra POST params, e.g. key=value&foo=bar
LOGIN_EXTRA_PARAMS=

# Regex patterns for session state detection (optional)
LOGIN_LOGGED_IN_REGEX=
LOGIN_LOGGED_OUT_REGEX=